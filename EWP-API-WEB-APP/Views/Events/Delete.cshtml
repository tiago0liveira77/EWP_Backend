@model EWP_API_WEB_APP.Models.Data.Events

@{
    ViewData["Title"] = "Delete";
}

<div class="container mb-5">
    <div class="mt-4">
        <h3>Are you sure you want to delete this?</h3>
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title">Event</h4>
                <hr />

                <dl class="row">
                    <dt class="col-sm-2">Name</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-2">Description</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

                    <dt class="col-sm-2">Starting date</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.StartingDate)</dd>

                    <dt class="col-sm-2">Ending date</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.EndingDate)</dd>

                    <dt class="col-sm-2">Location</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Location)</dd>

                    <dt class="col-sm-2">Event type:</dt>
                    <dd class="col-sm-10"> @ViewData["eventType"] </dd>

                    <dt class="col-sm-2">Image:</dt>
                    <dd class="col-sm-10">
                        <div class="form-group">
                            <div>
                                @if (!string.IsNullOrEmpty(Model.Ficheiro))
                                {
                                    <img src="~/img/uploadedEventImages/@Model.Ficheiro" alt="Current Image" class="img-fluid" />
                                }
                            </div>
                        </div>
                    </dd>

                    
                </dl>

                <div class="text-center mt-3">
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
