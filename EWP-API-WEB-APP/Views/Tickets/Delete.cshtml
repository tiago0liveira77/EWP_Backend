@model EWP_API_WEB_APP.Models.Data.Tickets

@{
    ViewData["Title"] = "Delete";
}

<div class="container mb-5">
    <div class="mt-4">
        <h3>Are you sure you want to delete this?</h3>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Ticket</h4>
                <hr />

                <dl class="row">
                    <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Nome) </dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>

                    <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Description) </dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Price)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Price) €</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Selling)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Selling)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Event)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Event.Name)</dd>
                </dl>

                <div class="text-center">
                     <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" asp-route-id="@Model.Event.Id" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
