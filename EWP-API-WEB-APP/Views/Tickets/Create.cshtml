@model EWP_API_WEB_APP.Models.Data.Tickets

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1 class="text-center mt-4">Create New Ticket</h1>
    <hr />

    <div class="row justify-content-center mb-5">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Nome" class="control-label"> @Html.DisplayNameFor(model => model.Nome) </label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label mt-3"> @Html.DisplayNameFor(model => model.Description) </label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label mt-3">@Html.DisplayNameFor(model => model.Price)</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Selling" class="control-label mt-3">@Html.DisplayNameFor(model => model.Selling)</label>
                    <input asp-for="Selling" class="form-control" />
                    <span asp-validation-for="Selling" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EventFK" class="control-label mt-3">@Html.DisplayNameFor(model => model.Event)</label>
                    <select asp-for="EventFK" class="form-control" asp-items="ViewBag.EventFK"></select>
                </div>

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" asp-route-id="@ViewData["EventID"]" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
