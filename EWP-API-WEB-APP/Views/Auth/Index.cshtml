@model EWP_API_WEB_APP.Models.API.Requests.LoginRequest
@{
    ViewData["Title"] = "Login Page";
}


<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Login</h2>
                    <form asp-action="Login" asp-controller="Auth" method="post">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="text" id="email" name="email" class="form-control mt-2" placeholder="Enter your email">
                        </div>
                        <div class="form-group mt-2">
                            <label for="password">Password:</label>
                            <input type="password" id="password" name="password" class="form-control mt-2" placeholder="Enter your password">
                        </div>
                        @if (ViewBag.InvalidLogin != null && ViewBag.InvalidLogin)
                        {
                            <div class="alert alert-danger mt-2" role="alert">
                                Invalid login. Please check your credentials and try again.
                            </div>
                        }
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary mt-3">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
